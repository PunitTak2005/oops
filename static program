#include <iostream>

static int count = 0; // static variable to count the number of inputs

int main() {
    int num; // variable to store user input

    // take input from user
    std::cout << "Enter a number: ";
    std::cin >> num;

    // increment static count
    count++;

    // display output
    std::cout << "You entered: " << num << std::endl;
    std::cout << "Total inputs so far: " << count << std::endl;

    return 0;
}
