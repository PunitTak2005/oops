#include <iostream>

class Fibonacci {
private:
    int n;

public:
    Fibonacci(int numTerms) : n(numTerms) {}

    void generateSeries() {
        int a = 0;
        int b = 1;
        std::cout << "Fibonacci series: ";
        for (int i = 0; i < n; i++) {
            std::cout << a << " ";
            int next = a + b;
            a = b;
            b = next;
        }
        std::cout << std::endl;
    }
};

int main() {
    int numTerms;
    std::cout << "Enter number of terms: ";
    std::cin >> numTerms;

    Fibonacci fib(numTerms);
    fib.generateSeries();

    return 0;
}

