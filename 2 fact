#include <iostream>

long long factorial(int n) {
    long long fact = 1;
    for(int i = 1; i <= n; i++) {
        fact *= i;
    }
    return fact;
}

int main() {
    int num1, num2;
    std::cout << "Enter the first number: ";
    std::cin >> num1;
    std::cout << "Enter the second number: ";
    std::cin >> num2;
    long long fact1 = factorial(num1);
    long long fact2 = factorial(num2);
    std::cout << "The factorial of " << num1 << " is: " << fact1 << std::endl;
    std::cout << "The factorial of " << num2 << " is: " << fact2 << std::endl;
    return 0;
}
