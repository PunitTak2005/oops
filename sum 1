#include <iostream>

class Add_2Numbers {
public:
    int n1, n2;
    void read() {
        std::cout << "Input 2 numbers: ";
        std::cin >> n1 >> n2;
    }
    void sum() {
        int s = n1 + n2;
    }
    void show() {
        std::cout << "Sum of two numbers is: " << n1 + n2 << std::endl;
    }
};

int main() {
    Add_2Numbers obj1;
    obj1.read();
    obj1.sum();
    obj1.show();
    return 0;
}
