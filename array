#include <algorithm>
#include <vector>

int main() {
    int arr1[] = {1, 2, 3};
    int arr2[] = {4, 5, 6};
    int size1 = sizeof(arr1) / sizeof(arr1[0]);
    int size2 = sizeof(arr2) / sizeof(arr2[0]);

    std::vector<int> joinedArray;
    joinedArray.reserve(size1 + size2);

    std::copy(arr1, arr1 + size1, std::back_inserter(joinedArray));
    std::copy(arr2, arr2 + size2, std::back_inserter(joinedArray));

    // Print the joined array
    for (int i = 0; i < joinedArray.size(); i++) {
        std::cout << joinedArray[i] << " ";
    }

    return 0;
}

