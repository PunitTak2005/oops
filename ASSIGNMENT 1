
#include <iostream>

class Series {
private:
    int start; // starting value of the series
    int n; // number of terms in the series

public:
    // constructor to initialize start and n
    Series(int s, int numTerms) : start(s), n(numTerms) {}

    // function to generate the series
    void generateSeries() {
        for (int i = 0; i < n; i++) {
            std::cout << start + i << " ";
        }
        std::cout << std::endl;
    }

    // function to calculate the sum of the series
    int calculateSum() {
        int sum = 0;
        for (int i = 0; i < n; i++) {
            sum += start + i;
        }
        return sum;
    }
};

int main() {
    int startValue;
    int numTerms;

    // get start value and number of terms from user
    std::cout << "Enter starting value: ";
    std::cin >> startValue;
    std::cout << "Enter number of terms: ";
    std::cin >> numTerms;

    // create an object of the Series class
    Series series(startValue, numTerms);

    // generate and print the series
    series.generateSeries();

    // calculate and print the sum of the series
    int sum = series.calculateSum();
    std::cout << "Sum of the series: " << sum << std::endl;

    return 0;
}

